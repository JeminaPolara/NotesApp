<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/detail_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/idActionBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idIvBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="?attr/homeAsUpIndicator"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/idTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/idIvBack"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/idSaveNote"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_done_all"
                app:tint="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:background="@color/gray_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_half"
            android:paddingTop="@dimen/padding_half"
            android:paddingRight="@dimen/padding_half">

            <LinearLayout
                android:id="@+id/detail_tile_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_card"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:id="@+id/title_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.neopixl.pixlui.components.edittext.EditText
                        android:id="@+id/detail_title"
                        paddingEnd="16dp"
                        paddingStart="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/title"
                        android:inputType="textCapSentences"
                        android:linksClickable="false"
                        android:paddingStart="6dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="6dp"
                        android:textAppearance="@style/Text.Big"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color_lighter"
                        android:textCursorDrawable="@null"
                        pixlui:typeface="RobotoSlab-Bold.ttf" />
                </LinearLayout>
            </LinearLayout>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/detail_content_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/idBtDoneTask"
                android:layout_below="@id/detail_tile_card"
                android:background="@drawable/bg_card"
                android:paddingBottom="2dp">

                <ScrollView
                    android:id="@+id/content_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarSize="4dp"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbarThumbVertical="@drawable/scrollbar_thumb">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <include
                            android:id="@+id/fragment_detail_content"
                            layout="@layout/fragment_detail_content" />


                        <TextView
                            android:id="@+id/idTvAssignDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assign Date"
                            android:textColor="@color/black_overlay"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/idEtAssignDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Assign Date"
                            android:nextFocusDown="@+id/idEtDiamondQty"
                            android:singleLine="true" />

                        <Button
                            android:id="@+id/idBtnAssignDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Change" />

                        <TextView
                            android:id="@+id/idTvMaxDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assign Max Date"
                            android:textColor="@color/black_overlay"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/idEtMaxDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Assign Max Date"
                            android:inputType="number"
                            android:nextFocusDown="@+id/idEtDiamondQty"
                            android:singleLine="true" />

                        <Button
                            android:id="@+id/idBtnMaxDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Change" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reminder"
                            android:textColor="@color/black_overlay"
                            android:textSize="18dp"
                            android:visibility="gone" />


                        <Button
                            android:id="@+id/idBtnAddRemin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Add"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/reminderList"
                            android:layout_width="match_parent"
                            android:layout_height="500dp"
                            android:visibility="gone" />

                    </LinearLayout>
                </ScrollView>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <Button
                android:id="@+id/idBtDoneTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/detail_timestamps"
                android:layout_gravity="left"
                android:text="Complete Task" />

            <LinearLayout
                android:id="@+id/detail_timestamps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/creation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="0dp"
                    android:textAppearance="@style/Text.Small"
                    pixlui:typeface="Roboto-Regular.ttf" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/last_modification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="0dp"
                    android:textAppearance="@style/Text.Small"
                    pixlui:typeface="Roboto-Regular.ttf" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/snackbar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
